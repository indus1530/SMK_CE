<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvItem"
        style="@style/cardView"
        android:layout_margin="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="0dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fmRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="0dp">

                <View
                    android:id="@+id/indicator"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:elevation="2dp"/>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hh02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female Name"
            android:textColor="@color/grayDark"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hh05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:text="Female Age"
            android:textColor="@color/gray"
            android:textStyle="italic"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/hh06"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Marital Status"/>

    <TextView
        android:id="@+id/secStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/lightgrey"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:letterSpacing="0.24"
        android:layout_gravity="end"
        android:textStyle="italic|normal"
        android:textSize="11dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Status" />
</LinearLayout>
</LinearLayout>

            </LinearLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>
<LinearLayout
    android:id="@+id/subitem"
    android:layout_width="match_parent"
    android:layout_marginTop="-8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="1dp"
    android:gravity="end"
    android:visibility="gone"
    android:background="@color/colorPrimaryLightOverlay"
    android:padding="12dp"
    tools:visibility="visible"
    android:shadowDx="2"
    android:shadowDy="2"
    android:shadowRadius="2"
    android:shadowColor="@color/gray"
    android:layout_height="56dp">
    <TextView
        android:elevation="2dp"

        android:id="@+id/add_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_margin="0dp"
        android:paddingStart="24dp"
        android:layout_gravity="center_vertical"
        android:paddingEnd="24dp"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/all_round_corners_stroke"
        android:textStyle="bold"
        android:text="Add Section"
        android:textColor="@color/white" />
</LinearLayout>
</LinearLayout>