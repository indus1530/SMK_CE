                            android:text="@string/vhc05b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhc06  CheckBox   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhc06"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_vhc06" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/vhc06" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vhc06check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="0">

                        <CheckBox
                            android:id="@+id/vhc06a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06a" />

                        <CheckBox
                            android:id="@+id/vhc06b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06b" />

                        <CheckBox
                            android:id="@+id/vhc06c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06c" />

                        <CheckBox
                            android:id="@+id/vhc06d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06d" />

                        <CheckBox
                            android:id="@+id/vhc06e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06e" />

                        <CheckBox
                            android:id="@+id/vhc06f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06f" />

                        <CheckBox
                            android:id="@+id/vhc06g"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06g" />

                        <CheckBox
                            android:id="@+id/vhc06h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06h" />

                        <CheckBox
                            android:id="@+id/vhc06i"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06i" />

                        <CheckBox
                            android:id="@+id/vhc06j"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc06j" />

                        <CheckBox
                            android:id="@+id/vhc0696"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc0696" />

                        <CheckBox
                            android:id="@+id/vhc0696"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc0696" />

                        <EditText
                            android:id="@+id/vhc0696x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="AaBaCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz0123456789,. "
                            android:hint="@string/vhc0696"
                            android:tag="vhc0696"
                            android:text='@{vhc0696.checked ? vhc0696x.getText().toString() : ""}'
                            android:visibility='@{vhc0696.checked? View.VISIBLE : View.GONE}' />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView><!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/red_overlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/green_overlay"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>