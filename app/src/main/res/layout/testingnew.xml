                        <RadioButton
                            android:id="@+id/vhc03b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc03b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhc04  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhc04"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_vhc04" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/vhc04" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/vhc04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/vhc04a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc04a" />

                        <RadioButton
                            android:id="@+id/vhc04b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc04b" />

                        <RadioButton
                            android:id="@+id/vhc04c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc04c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhc05  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhc05"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
