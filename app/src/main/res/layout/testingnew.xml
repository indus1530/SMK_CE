<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
        <!--<variable
            name="form"
            type="edu.aku.hassannaqvi.sk.models.Form" />-->
        <variable
            name="callback"
            type="edu.aku.hassannaqvi.sk.ui.sections.SectionFActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- vhctitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhctitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vhctitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhchint  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhchint"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vhchint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhc01  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhc01"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_vhc01" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/vhc01" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/vhc01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/vhc01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc01a" />

                        <RadioButton
                            android:id="@+id/vhc01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc01b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhc02  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhc02"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_vhc02" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/vhc02" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/vhc02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/vhc02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc02a" />

                        <RadioButton
                            android:id="@+id/vhc02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vhc02b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- vhc03  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVvhc03"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_vhc03" />

                        <TextView
                            android:layout_width="0dp"
